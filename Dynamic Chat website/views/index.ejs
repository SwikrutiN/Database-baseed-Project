<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="nav" style="padding:4px 4px 2px 4px;" >
        <h3>All Chats!</h3> &nbsp;&nbsp;
        <form method="GET" action="/chats/new">
              <button>New Chat</button>
        </form>
    </div>
   
    <% for(let chat of chats){ %>
        <div class="chat">
            <p>From: <i><%= chat.from %></i></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <div style="display:flex; gap:10px;" >
                    <form method="GET" action="/chats/<%= chat._id%>/edit" style="display:inline;">
                        <button>Edit</button>
                    </form>
                    <br>
                    <form method="POST" action="/chats/<%= chat._id%>?_method=DELETE" style="display:inline;">
                        <button>Delete</button>
                    </form>
                </div>
                
            </div>
            <p>Recieved by: <i><%= chat.to %></i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
        </div>
        <br><br><br>
    <% } %>
</body>
</html>

